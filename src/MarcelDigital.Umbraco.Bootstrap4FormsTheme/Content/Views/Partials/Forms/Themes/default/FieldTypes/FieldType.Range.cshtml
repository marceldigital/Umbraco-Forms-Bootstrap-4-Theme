@using MarcelDigital.Umbraco.Bootstrap4FormsTheme.Extensions
@model Umbraco.Forms.Mvc.Models.FieldViewModel

<input type="range"
       name="@Model.Name"
       id="@Model.Id"
       class="@Html.GetFormFieldClass(Model.FieldTypeName) range @Html.ValidationClass(Model.Id)"
       value="@Model.ValueAsHtmlString"
       min="@(Model.AdditionalSettings.ContainsKey("Min") ? Model.AdditionalSettings["Min"] : null)"
       max="@(Model.AdditionalSettings.ContainsKey("Max") ? Model.AdditionalSettings["Max"] : null)"
       step="@(Model.AdditionalSettings.ContainsKey("Step") ? Model.AdditionalSettings["Step"] : null)"
       @{if (Model.Mandatory) { <text> data-val-required="@Model.RequiredErrorMessage" </text>  }} />
